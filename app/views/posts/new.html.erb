<h2>Create a new post</h2>

<%= form_with model: @post do |f| %>
<div>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
    <% @post.errors.full_messages_for(:title).each do |message| %>
        <p><i><%= message %></i></p>
    <% end %>    
</div>
<div>
    <%= f.label :body %> <br>
    <%= f.text_area :body, size: "60x10" %>
    <% @post.errors.full_messages_for(:body).each do |message| %>
        <p><i><%= message %></i></p>
    <% end %>
</div>
<div>
    <%= f.submit %>
</div>
<% end %>
